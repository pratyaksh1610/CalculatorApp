<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#242530"
        android:gravity="end"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etResult"
        android:inputType="textNoSuggestions"
        android:layout_height="50dp"
        android:backgroundTint="#242530"
        android:textColor="@color/white"
        android:cursorVisible="false"
        android:gravity="center|right"
        android:layout_margin="6dp"
        android:textSize="30dp"
        android:autoSizeTextType="uniform"
        android:maxLines="2"
        android:src="@color/black"
        android:layout_width="match_parent" />

    <TextView
        android:textStyle="bold"
        android:textFontWeight="180"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:id="@+id/tvResult"
        android:layout_margin="8dp"
        android:textSize="40dp"
        android:maxLines="2"
        android:gravity="end"
        android:src="@color/black"
        android:layout_width="match_parent" />

     </LinearLayout>



    <!--    2e2f3e-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#242530"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:background="#363746"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tvSin"
                android:hint="@string/sin_fun"
                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvCos"

                android:hint="@string/cos_fun"
                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <TextView
                android:hint="@string/tan_fun"
                android:id="@+id/tvTan"

                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <TextView
                android:hint="AC"
                android:textAllCaps="false"
                android:textColorHint="#ffbb00"
                android:id="@+id/tvC"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <ImageView
                android:id="@+id/tvDivide"
                android:src="@drawable/divide_1"
                android:scaleType="center"
                app:tint="#ffbb00"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/imMultiply"
                android:src="@drawable/close"
                android:scaleType="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:tint="#ffbb00" />

            <ImageView
                android:id="@+id/imBack"
                android:src="@drawable/backspace"
                app:tint="#ffbb00"
                android:scaleType="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/tvSqrt"
                android:src="@drawable/square_root"
                android:hint="@string/sqrt_fun"
                android:scaleType="center"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:tint="@color/white" />


            <TextView
                android:hint="@string/factorial"
                android:id="@+id/tvFactorial"

                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <ImageView
                android:hint="@string/pi_value"
                android:id="@+id/tvPi"
                android:src="@drawable/pi_icon"
                android:textAllCaps="false"
                android:scaleType="center"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv7"
                android:hint="7"
                android:textColorHint="@color/white"
                android:textSize="23dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:hint="8"
                android:id="@+id/tv8"
                android:textColorHint="@color/white"

                android:textSize="23dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:hint="9"
                android:id="@+id/tv9"
                android:textColorHint="@color/white"

                android:textSize="23dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:hint="-"
                android:id="@+id/imMinus"
                app:tint="#ffbb00"
                android:background="#363746"
                android:src="@drawable/minus"
                android:scaleType="center"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">


            <TextView
                android:hint="@string/e_toPower_x"
                android:id="@+id/tvEx"

                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:hint="@string/x_square"
                android:id="@+id/tvx2"

                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <ImageView
                android:hint="@string/cube_root"
                android:id="@+id/tvCubeRoot"
                android:src="@drawable/cube_root"
                android:textAllCaps="false"
                android:scaleType="fitCenter"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:tint="@color/white" />


            <TextView
                android:hint="4"
                android:id="@+id/tv4"
                android:textColorHint="@color/white"

                android:textSize="23dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:hint="5"
                android:id="@+id/tv5"
                android:textColorHint="@color/white"

                android:textSize="23dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:hint="6"
                android:id="@+id/tv6"
                android:textColorHint="@color/white"

                android:textSize="23dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:hint="+"
                android:id="@+id/tvPlus"
                android:background="#363746"
                android:src="@drawable/add"
                app:tint="#ffbb00"
                android:scaleType="center"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">



            <TextView
                android:hint="@string/log_base_e"
                android:id="@+id/tvLn"

                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:hint="@string/log_base_10"
                android:id="@+id/tvLog_10"

                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvOpenBracket"
                android:hint="@string/opening_bracket"
                android:textAllCaps="false"
                android:textColorHint="@color/yellow"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>



            <TextView
                android:id="@+id/tvCloseBracket"
                android:hint="@string/closing_bracket"
                android:textAllCaps="false"
                android:textColorHint="@color/yellow"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>



            <TextView
                android:hint="1"
                android:id="@+id/tv1"
                android:textColorHint="@color/white"
                android:textSize="23dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:hint="2"
                android:id="@+id/tv2"
                android:textColorHint="@color/white"

                android:textSize="23dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:hint="3"
                android:id="@+id/tv3"
                android:textColorHint="@color/white"

                android:textSize="23dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <ImageView
                android:id="@+id/tvPercent"
                android:hint="%"
                android:background="#363746"
                android:src="@drawable/percent"
                app:tint="#ffbb00"
                android:scaleType="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

<!--            <TextView-->
<!--                android:id="@+id/tvE"-->
<!--                android:hint="@string/e"-->
<!--                android:textSize="20dp"-->
<!--                android:textColorHint="@color/white"-->
<!--                android:gravity="center"-->
<!--                android:layout_weight="0.9"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->

            <TextView
                android:hint="@string/is_prime"
                android:id="@+id/tvPrime"
                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:hint="@string/ten_toPowerX"
                android:id="@+id/tv10x"

                android:textAllCaps="false"
                android:textColorHint="@color/white"
                android:textSize="19dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <ImageView
                android:id="@+id/imPlus_Minus"
                android:src="@drawable/plus_slash_minus"
                android:scaleType="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:tint="#ffbb00" />

            <TextView
                android:hint="0"
                android:textColorHint="@color/white"
                android:id="@+id/tv0"
                android:textSize="21dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:hint="."
                android:id="@+id/tvDecimal"
                android:textColorHint="@color/white"
                android:textSize="21dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:background="#ffbb00"
                android:id="@+id/imEqual"
                android:src="@drawable/equal"
                app:tint="#ffffff"
                android:scaleType="center"
                android:gravity="center"
                android:layout_weight="0.96"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>